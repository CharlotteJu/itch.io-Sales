<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".views.fragments.SettingsFragment">

    <TextView
        android:id="@+id/title_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/radio_group_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title_currency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/btn_dollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="$"/>

        <RadioButton
            android:id="@+id/btn_euros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="â‚¬"/>

        <RadioButton
            android:id="@+id/btn_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="OTHER"/>
    </RadioGroup>

    <TextView
        android:id="@+id/text_enter_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="PLEASE, ENTER THE CONVERTION"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/radio_group_choice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/currency_text_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_enter_conversion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/title_date_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE FORMAT :"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/currency_text_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/radio_group_date_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/title_date_format"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/hint_btn_us">

        <RadioButton
            android:id="@+id/btn_us"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Month/Day/Year" />

        <RadioButton
            android:id="@+id/btn_fr"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Day/Month/Year"/>

        <RadioButton
            android:id="@+id/btn_year_before"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Year/Month/Day"/>
    </RadioGroup>

    <TextView
        android:id="@+id/hint_btn_us"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="02/15/2021"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/hint_btn_fr"
        app:layout_constraintStart_toEndOf="@id/radio_group_date_format"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/hint_btn_fr"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="15/02/2021"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="@id/radio_group_date_format"
        app:layout_constraintBottom_toBottomOf="@id/radio_group_date_format"
        app:layout_constraintStart_toEndOf="@id/radio_group_date_format"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/hint_btn_other"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="2021/02/15"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/hint_btn_fr"
        app:layout_constraintStart_toEndOf="@id/radio_group_date_format"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>